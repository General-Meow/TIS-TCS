<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
	<!--
		Added the constraints for entity Curriculum.
	-->
	<changeSet id="20170321142414-2" author="jhipster">

		<addForeignKeyConstraint baseColumnNames="curricula_id"
		                         baseTableName="curriculum_grade"
		                         constraintName="fk_curriculum_grade_curricula_id"
		                         referencedColumnNames="id"
		                         referencedTableName="curriculum"/>
		<addForeignKeyConstraint baseColumnNames="grades_id"
		                         baseTableName="curriculum_grade"
		                         constraintName="fk_curriculum_grade_grades_id"
		                         referencedColumnNames="id"
		                         referencedTableName="grade"/>

		<addForeignKeyConstraint baseColumnNames="specialty_id"
		                         baseTableName="curriculum"
		                         constraintName="fk_curriculum_specialty_id"
		                         referencedColumnNames="id"
		                         referencedTableName="specialty"/>

	</changeSet>
</databaseChangeLog>
