<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<property name="now" value="now()" dbms="h2"/>

	<property name="now" value="now()" dbms="mysql"/>
	<property name="autoIncrement" value="true"/>

	<property name="floatType" value="float4" dbms="postgresql, h2"/>
	<property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

	<!--
		Added the entity Curriculum.
	-->
	<changeSet id="20170321142414-1" author="jhipster">
		<createTable tableName="curriculum">
			<column name="id" type="bigint" autoIncrement="${autoIncrement}">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="true"/>
			</column>

			<column name="start" type="date">
				<constraints nullable="true"/>
			</column>

			<column name="end" type="date">
				<constraints nullable="true"/>
			</column>

			<column name="curriculum_sub_type" type="varchar(255)">
				<constraints nullable="true"/>
			</column>

			<column name="assessment_type" type="varchar(255)">
				<constraints nullable="true"/>
			</column>

			<column name="does_this_curriculum_lead_to_cct" type="bit">
				<constraints nullable="true"/>
			</column>

			<column name="period_of_grace" type="integer">
				<constraints nullable="true"/>
			</column>

			<column name="specialty_id" type="bigint">
				<constraints nullable="true"/>
			</column>

			<!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
		</createTable>

		<createTable tableName="curriculum_grade">
			<column name="grades_id" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="curricula_id" type="bigint">
				<constraints nullable="false"/>
			</column>
		</createTable>

		<addPrimaryKey columnNames="curricula_id, grades_id" tableName="curriculum_grade"/>

	</changeSet>
</databaseChangeLog>
